<ul>
  <% @books.each do |book| %>
    <li id="book-<%= book.id %>"> <%= book.title %> <%= book.author %>
      <form action="/books/<%= book.id %>" method="post">
        <input type="hidden" name="id" value="<%= book.id %>">
        <input type="submit" value="Delete" />
      </form>
    </li>
  <% end %>
</ul>